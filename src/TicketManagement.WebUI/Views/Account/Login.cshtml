@model TicketManagement.WebUI.Models.Account.LoginViewModel
@using TicketManagement.WebUI
@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer
@inject IHtmlLocalizer<SharedResource> SharedLocalizer

@{
    ViewBag.Title = SharedLocalizer["Login"];
}

<div class="login-form">
    <div class="container">
        <div class="col-md-6">
            <section>
                @using (Html.BeginForm("Login", "Account", new { returnUrl = ViewBag.Return }, FormMethod.Post, true, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <h5>@Localizer["Enter"]</h5>
                    <hr />
                    <br />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.LabelFor(m => m.Login, new { @class = "col-md-2 control-label" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(m => m.Login, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.Login)
                                </div>
                        </div>
                    <br />
                        <div class="form-group">
                            @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(m => m.Password, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.Password)
                                </div>
                        </div>
                    <br />
                    <div>
                        <div class="col-md-offset-2 col-md-10">
                            <button type="submit" id="login-submit" value="Login" class="btn btn-form"><span>@Localizer["Login"]</span></button>
                        </div>
                        <br />
                        <div class="col-md-offset-2 col-md-10">
                            <a href=@Url.Action("Register", "Account") class="btn btn-form"><span>@SharedLocalizer["Register"]</span></a>
                        </div>
                    </div>
                }
            </section>
        </div>
    </div>
</div>
@section scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}